# Application Settings
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
HOST=0.0.0.0
PORT=8000

# Security Settings
ALLOWED_HOSTS=["*"]
ALLOWED_ORIGINS=["*"]

# Model Settings
MODEL_NAME=google/flan-t5-small
MODEL_CACHE_DIR=./model_cache
MAX_CONCURRENT_TASKS=10

# Task Management
TASK_TIMEOUT=300
TASK_CLEANUP_INTERVAL=3600
MAX_TASK_HISTORY=1000

# Redis Settings (optional - will use in-memory if not available)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Tools
EXTERNAL_TOOL_TIMEOUT=30
MAX_TOOL_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
